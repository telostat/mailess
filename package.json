{
  "name": "mailess",
  "version": "0.0.4-SNAPSHOT",
  "description": "Send mail, less",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "distle/index.js",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/telostat/mailess",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "yarn clean && webpack && yarn docs",
    "test": "jest --coverage",
    "test:ci": "cross-env CI=1 jest",
    "docs": "typedoc",
    "clean": "trash dist test docs build",
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('mailess must be installed with Yarn: https://yarnpkg.com/')\"",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "express": "^4.17.2",
    "handlebars": "^4.7.7",
    "helper-markdown": "^1.0.0",
    "html-to-text": "^8.1.0",
    "mjml": "^4.11.0",
    "multer": "^1.4.4",
    "nodemailer": "^6.7.2",
    "sha.js": "^2.4.11",
    "typescript": "^4.5.4",
    "uglify-js": "^3.14.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@types/express": "^4.17.13",
    "@types/html-to-text": "^8.0.1",
    "@types/jest": "^27.4.0",
    "@types/mjml": "^4.7.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.8",
    "@types/nodemailer": "^6.4.4",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "codecov": "^3.8.3",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.0",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "terser-webpack-plugin": "^5.3.0",
    "trash-cli": "^5.0.0",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.10",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "resolutions": {
    "uglify-js": "npm:terser"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "./node_modules/.bin/prettier --write",
      "./node_modules/.bin/eslint"
    ]
  }
}
