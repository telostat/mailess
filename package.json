    "sha.js": "^2.4.11",
    "terser": "^5.15.0",
    "typescript": "^4.8.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@types/express": "^4.17.13",
    "@types/html-to-text": "^8.1.1",
    "@types/jest": "^29.0.0",
