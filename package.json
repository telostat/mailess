{
  "name": "mailess",
  "version": "0.0.1-SNAPSHOT",
  "description": "Send mail, less",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "distle/index.js",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/vst/mailess",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "yarn clean && webpack && yarn docs",
    "test": "jest --coverage",
    "test:ci": "cross-env CI=1 jest",
    "docs": "typedoc",
    "clean": "trash dist test docs build",
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('mailess must be installed with Yarn: https://yarnpkg.com/')\""
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "express": "^4.17.1",
    "handlebars": "^4.7.6",
    "helper-markdown": "^1.0.0",
    "html-to-text": "^5.1.1",
    "mjml": "^4.6.3",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.8",
    "sha.js": "^2.4.11",
    "typescript": "^3.9.5",
    "uglify-js": "^3.9.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@types/express": "^4.17.6",
    "@types/html-to-text": "^5.1.1",
    "@types/jest": "^26.0.0",
    "@types/mjml": "^4.0.4",
    "@types/multer": "^1.4.3",
    "@types/node": "^14.0.13",
    "@types/nodemailer": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "codecov": "^3.7.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gh-pages": "^3.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.10",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "standard-version": "^8.0.0",
    "terser-webpack-plugin": "^3.0.5",
    "trash-cli": "^3.0.0",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.10"
  },
  "resolutions": {
    "uglify-js": "npm:terser"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "./node_modules/.bin/prettier --write",
      "./node_modules/.bin/eslint"
    ]
  }
}
