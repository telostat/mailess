{
  "name": "mailess",
  "version": "0.0.1-SNAPSHOT",
  "description": "Send mail, less",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "distle/index.js",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/vst/mailess",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "yarn clean && webpack && yarn docs",
    "test": "jest --coverage",
    "test:ci": "cross-env CI=1 jest",
    "docs": "typedoc",
    "clean": "trash dist test docs build",
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('mailess must be installed with Yarn: https://yarnpkg.com/')\""
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "express": "^4.17.1",
    "handlebars": "^4.7.3",
    "helper-markdown": "^1.0.0",
    "html-to-text": "^5.1.1",
    "mjml": "^4.5.1",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.3",
    "sha.js": "^2.4.11",
    "typescript": "^3.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@types/express": "^4.17.2",
    "@types/html-to-text": "^1.4.31",
    "@types/jest": "^24.0.24",
    "@types/mjml": "^4.0.2",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.12.21",
    "@types/nodemailer": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "codecov": "^3.7.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.2",
    "gh-pages": "^2.0.1",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "standard-version": "^6.0.1",
    "terser-webpack-plugin": "^2.3.5",
    "trash-cli": "^3.0.0",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "typedoc": "^0.16.10",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "resolutions": {
    "uglify-js": "npm:terser"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "./node_modules/.bin/prettier --write",
      "./node_modules/.bin/eslint"
    ]
  }
}
