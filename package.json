{
  "name": "mailess",
  "version": "0.0.12",
  "description": "Send mail, less",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "distle/index.js",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/telostat/mailess",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "yarn clean && webpack && yarn docs",
    "test": "jest --coverage",
    "test:ci": "cross-env CI=1 jest",
    "docs": "typedoc",
    "clean": "rm -rf dist test docs build",
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('mailess must be installed with Yarn: https://yarnpkg.com/')\"",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "helper-markdown": "^1.0.0",
    "html-minifier-terser": "^7.2.0",
    "html-to-text": "^9.0.5",
    "mjml": "^4.14.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "sha.js": "^2.4.11",
    "terser": "^5.24.0",
    "typescript": "^5.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@types/express": "^4.17.21",
    "@types/html-to-text": "^9.0.4",
    "@types/jest": "^29.5.10",
    "@types/mjml": "^4.7.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.2",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "codecov": "^3.8.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "gh-pages": "^6.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.4",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "./node_modules/.bin/prettier --write",
      "./node_modules/.bin/eslint"
    ]
  }
